{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar e rodar (MSYS2 MinGW64)",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-g",
        "main.cpp",
        "file_manager.cpp",
        "utils.cpp",
        "-o",
        "FileExplorer.exe",
        "&&",
        "./FileExplorer.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compila com g++ do MSYS2 MinGW64 e roda automaticamente"
    }
  ]
}
